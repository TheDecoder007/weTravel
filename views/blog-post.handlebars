<div class = "container is-fluid createContainer">
      <h1>Create your blog</h1>
        <div class="field">
          <label class="label">Title</label>
            <div class="control">
              <input class="input" type="text" placeholder="Title of your blog">
            </div>
        </div>

        <div class="field">
          <label class="label">Description</label>
            <div class="control">
              <input class="input" type="text" placeholder="Short description of your blog">
            </div>
        </div>
      
        <div class="field">
          <label class="label">Blog</label>
            <div class="control">
              <textarea class="textarea" rows = "10" placeholder="Write your blog here"></textarea>
            </div>
        </div>

        <div class="file">
          <label class="file-label">
            <input class="file-input" type="file" name="resume">
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Choose an image...
                </span>
              </span>
          </label>
        </div>
        </br>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
          <div class="control">
            <a class="button is-link" href = "index.html">Go Back</a>
          </div>
        </div>

    </div>