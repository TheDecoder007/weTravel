<body>
      <section class="hero is-small">
      <div class="hero-body">
        <img
          src="https://i.imgur.com/XOqnGTY.png"
          alt="weTravel logo"
        />
        
        <h2 class="subtitle is-4 heroTitle2">
          Blogs from travelers around the world
        </h2>
      </div>
    </section>

     <!-- MAIN CONTAINER -->
    <section class="whole-page">
      <div class="container is-fluid">
        <div class="columns is-desktop">

 <div class="column is-narrow">
   <section>
       {{#if loggedIn}}
       <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <a href="/Dashboard">View My Blogs</a>
            <a href="#">Create A Blog</a>
            <button id="logout" class="btn-no-style">logout</button>
        </div>
        {{else}}
        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <a href="/login">Login</a>
        </div>
        {{/if}}
        <span class="menu" style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; Menu</span>
        <script>
          function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
          }

          function closeNav() {
              document.getElementById("mySidenav").style.width = "0";
          }
        </script>
   </section> 
 </div>

{{!-- CARD AREA --}}
{{!-- <div class="wrapper"> --}}
   <div class="container is-fluid">
    <div class="column is-12">
        <div class="columns is-multiline">

    <main>
      {{{ body }}}
    </main>
          </div>
        </div>
    </div>
{{!-- </div> --}}
    <footer class="container-fluid">
      <p>Travel Well!</p>
    </footer>
            </div>
        </div>
    </div>
</section>
