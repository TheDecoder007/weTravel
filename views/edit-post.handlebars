<article>

  <div class="container is-fluid blogContainer">
    <div class="columns">
      <div class="column is-three-fifths is-offset-one-fifth">


        <a href="/dashboard"> &larr; Back to dashboard</a>
        <h2>
          Edit Title
        </h2>
        <form class="edit-post-form">
          <div class="field">
          <div class="control">
            <input class="input" id="post-title" type="text" value="{{post.title}}" >
          </div>
          </div>
          <h2>
            Edit Description
          </h2>
          <div class="field">
          <div class="control">
            <input class="input" id="post-description" type="text" value="{{post.description}}" >
          </div>
          </div>
          <h2>
            Edit Body
          </h2>
          <div class="field">
          <div class="control">
            <input class="input" id="post-blog-body" type="text" value="{{post.blog_body}}" >
          </div>
          </div>
          <div class="field-is-grouped">
            <div class="control">
            <input class="button edit-post-form" type="submit" value="Save post"></input>
            </div>
            <input class="button delete-post-btn" type="button" value="Delete post"></input>
            </div>
          {{!-- <div>
            {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
          </div> --}}
        </form>

        <form class="comment-form">
          <h2>
            Add Comment
          </h2>
          <div>
            <textarea name="comment-body"></textarea>
          </div>

          
            
          
          <div>
            <button type="submit">add comment</button>
          </div>
      </div>
    </div>
  </div>
  </form>
</article>

{{> comments post.comments}}
<script src="/javascript/add-post.js"></script>
<script src="/javascript/edit-posts.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>